<h1>My tasks</h1>

<ol>
<% @tasks.each do |task| %>

  <li> <%= link_to task.title, task_path(task) %> </li>

    <% if task.completed? %>
        <i class="fa-solid fa-square-check"></i>
        <% else  %>
        <i class="fa-solid fa-battery-empty"></i>
      <% end %>
  <% end %>
</ol>

